<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dejatjackson.pybot.VoiceActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/voicePage"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="60dp"
        android:text="Voice Command"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/voice"
        android:layout_width="73dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:background="#00000000"
        android:contentDescription="voice icon"
        app:layout_constraintEnd_toEndOf="@+id/voicePage"
        app:layout_constraintStart_toStartOf="@+id/voicePage"
        app:layout_constraintTop_toBottomOf="@+id/voicePage"
        app:srcCompat="@drawable/mic" />

    <TextView
        android:id="@+id/voiceOutput"
        android:layout_width="206dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Tap the microphone to create a one word voice command"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/voice"
        app:layout_constraintStart_toStartOf="@+id/voice"
        app:layout_constraintTop_toBottomOf="@+id/voice" />

    <ImageButton
        android:id="@+id/robot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:background="#00000000"
        android:contentDescription="robot icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/car2" />
</android.support.constraint.ConstraintLayout>
